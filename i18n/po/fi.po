msgstr ""

#: user_guide/en.html%2Bhtml.body.div.div.ul.li:1106-9
msgid ""
"You can apply the profile from the <span class=\"ui\">Profiles menu</span>"
msgstr ""

#: user_guide/en.html%2Bhtml.body.div.div.ul.li:1107-9
msgid "You can assign a gesture to it"
msgstr ""

#: user_guide/en.html%2Bhtml.body.div.div.ul.li:1108-9
msgid "You can show it in your <span class=\"ui\">Quick Menu</span>"
msgstr ""


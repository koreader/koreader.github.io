#: user_guide/en.html:5794
msgid "<span class=\"ui\">Right 90¬∞</span> (landscape)"
msgstr ""

#. type: Content of: <html><body><div><table><tr><td><ul><li>
#: user_guide/en.html:5795
msgid "<span class=\"ui\">180¬∞</span> (upside down)"
msgstr ""

#. type: Content of: <html><body><div><table><tr><td>
#: user_guide/en.html:5800
msgid "<span class=\"ui\">On showing folder</span>"

#. type: Content of: <html><body><div><table><tr><td>
#: user_guide/en.html:5777
msgid "<span class=\"ui\">On wake-up</span>"
msgstr ""

#. type: Content of: <html><body><div><table><tr><td><p>
#: user_guide/en.html:5778
msgid "Run this profile every time device wakes up"
msgstr ""

#. type: Content of: <html><body><div><table><tr><td>
#: user_guide/en.html:5783
msgid "<span class=\"ui\">On rotation</span>"
